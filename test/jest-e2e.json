{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/star-wars/(.*)": "<rootDir>/../libs/star-wars/src/$1",
    "@app/star-wars": "<rootDir>/../libs/star-wars/src",
    "@app/swapi/(.*)": "<rootDir>/../libs/swapi/src/$1",
    "@app/swapi": "<rootDir>/../libs/swapi/src",
    "@app/db-mongoose/(.*)": "<rootDir>/../libs/db-mongoose/src/$1",
    "@app/db-mongoose": "<rootDir>/../libs/db-mongoose/src"
  }
}